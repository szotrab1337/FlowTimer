<Application
    x:Class="FlowTimer.Wpf.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <LinearGradientBrush x:Key="FlowGradientBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0" Color="#FF4FACFE" />
                <GradientStop Offset="1" Color="#FF00F2FE" />
            </LinearGradientBrush>

            <DrawingImage x:Key="AppIcon">
                <DrawingImage.Drawing>
                    <DrawingGroup>
                        <GeometryDrawing Brush="#FF1E1E2E">
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry
                                    RadiusX="100"
                                    RadiusY="100"
                                    Rect="30,30,452,452" />
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>

                        <GeometryDrawing>
                            <GeometryDrawing.Pen>
                                <Pen
                                    Brush="{StaticResource FlowGradientBrush}"
                                    EndLineCap="Round"
                                    StartLineCap="Round"
                                    Thickness="35" />
                            </GeometryDrawing.Pen>
                            <GeometryDrawing.Geometry>
                                <EllipseGeometry
                                    Center="256,256"
                                    RadiusX="160"
                                    RadiusY="160" />
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>

                        <GeometryDrawing Brush="{StaticResource FlowGradientBrush}">
                            <GeometryDrawing.Geometry>
                                <PathGeometry
                                    Figures="M210 180 L 340 256 L 210 332 Z"
                                    FillRule="Nonzero" />
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingImage.Drawing>
            </DrawingImage>
        </ResourceDictionary>
    </Application.Resources>
</Application>
