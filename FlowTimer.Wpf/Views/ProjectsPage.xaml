<Page
    x:Class="FlowTimer.Wpf.Views.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:FlowTimer.Wpf.ViewModels"
    Title="ProjectsPage"
    d:DataContext="{d:DesignInstance Type=viewModels:ProjectsViewModel,
                                     IsDesignTimeCreatable=True}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Loaded="Page_OnLoaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            VerticalAlignment="Center"
            Style="{DynamicResource TitleTextBlockStyle}"
            Text="Projekty" />

        <Button
            Grid.Row="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Command="{Binding AddProjectCommand}"
            Style="{DynamicResource AccentButtonStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,2,0,0"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource SymbolThemeFontFamily}"
                    FontSize="14"
                    Text="&#xE710;" />
                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Text="Dodaj projekt" />
            </StackPanel>
        </Button>

        <ListView
            Grid.Row="1"
            Margin="0,15,0,0"
            ItemsSource="{Binding Projects}"
            SelectedItem="{Binding SelectedProject}">
            <ListView.ItemContainerStyle>
                <Style
                    BasedOn="{StaticResource {x:Type ListViewItem}}"
                    TargetType="ListViewItem">
                    <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>

                    <Grid Margin="5,10,5,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{Binding Name}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,4,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding Description}"
                            TextTrimming="CharacterEllipsis" />

                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,8,0,0"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,2,0,0"
                                VerticalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="&#xE9D5;" />
                            <TextBlock
                                Margin="6,0,16,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding TasksProgress}" />

                            <TextBlock
                                Margin="0,2,0,0"
                                VerticalAlignment="Center"
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="&#xE823;" />
                            <TextBlock
                                Margin="6,0,0,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{Binding TotalTime}" />
                        </StackPanel>

                        <Button
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="8,0"
                            VerticalAlignment="Center"
                            Command="{Binding DataContext.EditProjectCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                            CommandParameter="{Binding}"
                            ToolTip="Edytuj">
                            <TextBlock
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                FontSize="14"
                                Text="&#xE70F;" />
                        </Button>

                        <Button
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Command="{Binding DataContext.ArchiveProjectCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                            CommandParameter="{Binding}"
                            ToolTip="Usuń">
                            <TextBlock
                                FontFamily="{DynamicResource SymbolThemeFontFamily}"
                                FontSize="14"
                                Text="&#xE74D;" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>