<Page
    x:Class="FlowTimer.Wpf.Views.EditWorkItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:FlowTimer.Wpf.ViewModels"
    Title="EditWorkItemPage"
    d:DataContext="{d:DesignInstance Type=viewModels:EditWorkItemViewModel,
                                     IsDesignTimeCreatable=True}"
    FocusManager.FocusedElement="{Binding ElementName=NameTextBox}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            VerticalAlignment="Center"
            Style="{DynamicResource TitleTextBlockStyle}"
            Text="Edycja zadania" />

        <Grid
            Grid.Row="1"
            Margin="0,20,0,0">
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <Label
                            Content="Nazwa"
                            Focusable="True"
                            Style="{StaticResource GenericLabelStyle}" />
                        <TextBox
                            x:Name="NameTextBox"
                            Margin="0,5,0,15"
                            Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                        <Label
                            Content="Opis"
                            Style="{StaticResource GenericLabelStyle}" />
                        <TextBox
                            Margin="0,5,0,15"
                            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Button
                            Margin="0,0,10,0"
                            Command="{Binding CancelCommand}"
                            Content="Anuluj" />
                        <Button
                            Command="{Binding SaveCommand}"
                            Content="Zapisz"
                            Style="{DynamicResource AccentButtonStyle}" />
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
